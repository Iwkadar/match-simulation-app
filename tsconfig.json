{
    "compilerOptions": {
        "composite": true,
        "target": "ES2018",
        "lib": [
            "es2015",
            "dom"
        ],
        "jsx": "react-jsx",
        "outDir": "dist",
        "module": "CommonJS",
        "types": [
            "jest",
            "@testing-library/jest-dom"
        ],
        "sourceMap": true,
        "strict": true,
        "allowJs": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "declaration": true
    },
    "include": [
        "src",
        "server/index.js"
    ],
    "exclude": [
        "**/node_modules/**"
    ]
}